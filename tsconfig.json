{
    "extends": "./tsconfig_add.json",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "esModuleInterop": true,
        "strict": true
        // "allowSyntheticDefaultImports": false
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}

